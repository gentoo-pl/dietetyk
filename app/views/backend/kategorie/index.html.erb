<p id="notice"><%= notice %></p>

<h1>Kategorie</h1>

<table>
  <thead>
    <tr>
      <th>Nazwa</th>
      <th>Aktywna</th>
      <th>Ilość dań</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @kategorie.each do |kategoria| %>
      <tr>
        <td><%= kategoria.nazwa %></td>
        <td><%= fa_icon(kategoria.aktywna ? "check" : "times") %></td>
        <td><%= kategoria.ilosc_dan %></td>
        <td><%= link_to 'Pokaż', [:backend, kategoria] %></td>
        <td><%= link_to 'Edytuj', edit_backend_kategoria_path(kategoria) %></td>
        <td><%= link_to 'Usuń', [:backend, kategoria], method: :delete, data: { confirm: 'Na pewno usunąć kategorię?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'Dodaj kategorię', new_backend_kategoria_path %>
